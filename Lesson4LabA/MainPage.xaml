<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lesson4LabA.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Morse Code Translator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="LblMorse" Text="" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="LblOutput" Text="" FontSize="Title" Padding="30,10,30,10"/>
        <Button x:Name="BtnDot" Text="." Clicked="BtnDot_Clicked"></Button>
        <Button x:Name="BtnDash" Text="-" Clicked="BtnDash_Clicked"></Button>
        <Button x:Name="BtnSpace" Text="Space" Clicked="BtnSpace_Clicked"></Button>
        <Button x:Name="BtnClear" Text="Clear All" Clicked="BtnClear_Clicked"></Button>
    </StackLayout>

</ContentPage>
